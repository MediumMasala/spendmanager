# Database
DATABASE_URL="postgresql://spendmanager:spendmanager_dev@localhost:5432/spendmanager"

# Redis
REDIS_URL="redis://localhost:6379"

# Server
PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_MAX_TOKENS=500

# Anthropic (optional)
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-3-haiku-20240307"

# LLM Cost Controls
LLM_DAILY_BUDGET_USD=10.00
LLM_PER_USER_DAILY_BUDGET_USD=0.50
LLM_CIRCUIT_BREAKER_THRESHOLD=5
LLM_CIRCUIT_BREAKER_TIMEOUT_MS=60000

# WhatsApp Business Platform
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_BUSINESS_ACCOUNT_ID="your-business-account-id"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_VERIFY_TOKEN="your-webhook-verify-token"
WHATSAPP_TEMPLATE_WEEKLY_SUMMARY="weekly_money_summary"

# OTP (for development, use console; production use Twilio/MSG91)
OTP_PROVIDER="console"
OTP_TWILIO_SID=""
OTP_TWILIO_AUTH_TOKEN=""
OTP_TWILIO_FROM=""

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL="info"
